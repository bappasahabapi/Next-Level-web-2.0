// To solve the problem using  $elemMatch
// { <field>: { $elemMatch: { <query1>, <query2>, ... } } }
//Array of  object er khetre use korbo

db.practice.find({
    skills: {
        $elemMatch: {
            name: "JAVASCRIPT",
            level: "Expert"
        }
    }
})
.project({ skills: 1 })

















